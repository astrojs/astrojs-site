@import './mixin'

a
  line-height 18px
  color #0071E5
  text-decoration none

.subsection
  font-size 16px
  font-weight 700
  padding-bottom 10px

.even
  background #FAFAFA
  border 1px solid white
  border-radius 2px
  margin-bottom 3px
  box-shadow 0px 1px 2px rgba(0, 0, 0, .1)

.odd
  background #f7f7f7
  border 1px solid white
  border-radius 2px
  margin-bottom 3px
  box-shadow 0px 1px 2px rgba(0, 0, 0, .1)

.name
  float left
  color #171717

.date
  float right
  color #B2B2B2
  font-size 10px

.message
  clear both
  display block
  color #646464

body
  background #F3F3F3
  margin 0
  font-family: helvetica neue, helvetica, sans-serif;
  
  header.main
    width 100%
    background-color #0071E5
    border-top 5px solid black
    
    .content
      width 1000px
      height 105px
      background-image url('images/logo.png')
      background-repeat no-repeat
      background-size 325px 60px
      margin 0 auto
      margin-top 45px
      
  #content
    width 1000px
    margin 0 auto
    
    #tagline
      margin 60px 0 60px
      border-top 1px solid #D3D3D3
      border-bottom 1px solid #D3D3D3
      box-shadow inset 0 1px 0 #FFF, 0 1px 0 #FFF
      padding 30px 0 30px
      text-align center
      
      .tagline
        font-family 'Open Sans Condensed', sans-serif
        font-size 30px
        font-weight 700
        color #1E1E1E
        
      .subtext
        font-size 13px
        color #646464
    
    .column
      float left
    
    .left
      width 250px
    
      #commits
        padding-bottom 30px
        
        .commit
          clear both
          border-radius 4px
          padding 18px 5px 18px 18px
          font-size 12px
          
          .message
            color #0172E6
    
      #tweets
        .tweet
          clear both
          border-radius 4px
          padding 14px 6px
          font-size 12px
          
        a
          text-decoration: none
        
    .right
      width 750px
    
      #libraries
        padding-left 20px
        
        a
          font-size 10px
        
        .library
          padding 20px
          font-weight 400
          
          header
            font-size 15px
          
          p.description
            font-size 12px
            line-height 18px
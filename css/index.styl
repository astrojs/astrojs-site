@import './mixin'

a
  line-height: 18px
  color: #0071E5

.subsection
  font-size: 18px
  padding-bottom: 10px

body
  background: #F3F3F3
  margin: 0
  font-family: 'Open Sans', sans-serif;
  
  header.main
    width: 100%
    background-color: #0071E5
    border-top: 5px solid black
    
    .content
      width: 1000px
      height: 105px
      background-image: url('images/logo.png')
      
      background-repeat: no-repeat
      background-size: 325px 60px
      margin: 0 auto
      margin-top: 45px
      
  #content
    width: 1000px
    margin: 0 auto
    
    .tagline
      font-family: 'Open Sans Condensed', sans-serif
      margin: 60px 0 60px
      border-top: 1px solid #D3D3D3
      border-bottom: 1px solid #D3D3D3
      box-shadow: inset 0 1px 0 #FFF, 0 1px 0 #FFF
      height: 35px
      padding: 30px 0 30px
      font-size: 30px
      font-weight: 700
      text-align: center
    
    .column
      float: left
    
    .left
      width: 250px
    
      #commits
        .commit
          margin-bottom 6px
          border-radius: 4px
          padding: 14px 6px
          font-size: 11px
          
        .even
          background: #FAFAFA
          border-radius: 4px
          padding: 4px
          font-size: 11px
          
        .odd
          background: #F7F7F7
        
        .commit
          clear: both
          
          .repository
            float: left
            color: #171717
          .date
            float: right
            color: #B2B2B2
          .message
            clear: both
            display: block
            color: #0172E6
    
      #tweets
        .tweet
          margin-bottom 6px
          border-radius: 4px
          padding: 14px 6px
          font-size: 11px

        .even
          background: #FAFAFA
          border-radius: 4px
          padding: 4px
          font-size: 11px

        .odd
          background: #F7F7F7

        .tweet
          clear: both

          .name
            float: left
            color: #171717
          .date
            float: right
            color: #B2B2B2
          .message
            clear: both
            display: block
            color: #646464
        
    .right
      width: 750px;
    
      .libraries
        padding-left: 40px
        
        #libraries
          a
            font-size: 10px

    #libraries
      clear both
      padding-top: 40px
      
      .library
        padding-bottom: 40px
        
        header
          font-family: 'Open Sans', sans-serif
          font-weight: 700
          font-size: 18px
          
        p.description
          font-family: 'Open Sans', sans-serif
          font-weight: 400
          font-size: 12px
          line-height: 18px